{
  "compilerOptions": {
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "removeComments": true,
    "sourceMap": true,
    "target": "es6",
    "paths": {
      "lit-custom-element": [ "src/index" ]
    },
    "lib" :[
      "dom",
      "es2015",
      "es2017"
    ]
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.spec.ts",
    "base.spec.ts",
    "examples/**/*.ts"
  ]
}