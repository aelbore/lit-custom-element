{
  "name": "lit-custom-element",
  "version": "0.0.1",
  "description": "Lightweight library for building native web components",
  "main": "lit-custom-element.js",
  "module": "lit-custom-element.es.js",
  "scripts": {
    "build.tools": "ts-node --project tools/tsconfig.json ./node_modules/aria-tools/build.ts",
    "build.demo": "ts-node --project tools/tsconfig.json tools/build-demo.ts",
    "bundle": "ts-node --project tools/tsconfig.json tools/bundle.ts",
    "test": "aria test tests",
    "serve.coverage": "aria serve --test-coverage",
    "serve": "ts-node tools/server.ts",
    "coveralls": "cat ./coverage/lcovonly | ./node_modules/coveralls/bin/coveralls.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aelbore/lit-custom-element.git"
  },
  "keywords": [
    "lit-html",
    "custom-elements",
    "web-components",
    "lightweight"
  ],
  "author": "Arjay Elbore",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/aelbore/lit-custom-element/issues"
  },
  "homepage": "https://github.com/aelbore/lit-custom-element#readme",
  "typings": "lit-custom-element.d.ts",
  "devDependencies": {
    "aria-tools": "https://github.com/aelbore/aria-tools.git",
    "@types/express": "^4.16.1",
    "@types/jasmine": "^3.3.9",
    "@types/karma": "^3.0.2",
    "@types/node": "^11.9.4",
    "coveralls": "^3.0.2",
    "magic-string": "^0.25.2",
    "typescript": "^3.3.3"
  },
  "dependencies": {
    "lit-html": "^1.0.0"
  }
}
