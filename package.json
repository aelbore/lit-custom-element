{
  "name": "lit-custom-element",
  "version": "0.0.6",
  "description": "Lightweight library for building native web components",
  "main": "lit-custom-element.js",
  "module": "lit-custom-element.es.js",
  "scripts": {
    "build": "aria-build -d --external typescript",
    "build.counter": "aria build -f umd --resolve --compress umd -i ./examples/counter/index.ts -o ./dist/counter",
    "build.hello.name": "aria build -f umd --resolve --compress -i ./examples/hello-name/index.ts -o ./dist/hello-name",
    "build.hello.world": "aria build -f es --resolve --compress -i ./examples/hello-world/index.ts -o ./dist/hello-world",
    "build.tools": "ts-node --project tools/tsconfig.json ./node_modules/aria-tools/build.ts",
    "test": "aria test --browser -d specs --check-coverage",
    "serve.coverage": "aria serve --test-coverage",
    "serve": "ts-node tools/server.ts",
    "coveralls": "cat ./coverage/lcovonly | ./node_modules/coveralls/bin/coveralls.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aelbore/lit-custom-element.git"
  },
  "keywords": [
    "lit-html",
    "custom-elements",
    "web-components",
    "lightweight"
  ],
  "author": "Arjay Elbore",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/aelbore/lit-custom-element/issues"
  },
  "homepage": "https://github.com/aelbore/lit-custom-element#readme",
  "typings": "lit-custom-element.d.ts",
  "devDependencies": {
    "aria-build": "^0.0.24",
    "coveralls": "^3.0.9",
    "lit-element": "^2.2.1",
    "typescript": "^3.7.5"
  },
  "dependencies": {
    "lit-html": "^1.1.2",
    "magic-string": "^0.25.6"
  }
}
